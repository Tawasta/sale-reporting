<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <template id="report_saleorder_document" inherit_id="sale.report_saleorder_document">
        <xpath expr="//t[@t-call='web.external_layout']" position="before">
            <t t-if="doc.confirmation_date">
                <t t-set="header_date_value"
                    t-value="'{}.{}.{}'.format(doc.confirmation_date.date, doc.confirmation_date.month, doc.confirmation_date.year)"></t>
            </t>
        </xpath>
    </template>
</odoo>
